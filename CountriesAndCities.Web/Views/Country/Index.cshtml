@using CountriesAndCities.Services.DTOs
@model IEnumerable<CountryDTO>
@{
    ViewData["Title"] = "Countries";
}
<body class="ftco-section">
    <a asp-action="Create" asp-controller="Country" style="color:snow; font-weight:600" class="btn btn-primary tm-btn-submit">
        Add new country
    </a>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br />
                <div class="table-wrap">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row" class="scope">@item.Id</th>
                                    <th scope="row" class="scope">@item.CountryName</th>
                                    <td>
                                        <a asp-controller="City" asp-action="GetByCountryId" asp-route-id="@item.Id" style="color:snow; font-weight:600" class="btn btn-primary tm-btn-submit">View cities</a>
                                        <a asp-action = "Edit" asp-route-id = "@item.Id" asp-controller = "Country" style="color:snow; font-weight:600" class="btn btn-primary tm-btn-submit">Edit</a>
									    <a asp-action = "Delete" asp-route-id = "@item.Id" asp-controller = "Country" style="color:snow; font-weight:600" class="btn btn-primary tm-btn-submit">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <ul class="pagination">
                            @for (var i = 1; i <= (int)ViewData["TotalPages"] + 1; i++)
                            {
                                <li class="page-item @(i == (int)ViewData["CurrentPage"]? "active" : "")">
                                    <a asp-route-currentpage="@i" class="page-link">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>